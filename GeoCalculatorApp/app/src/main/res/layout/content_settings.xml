<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    tools:context="gvsu.vinsko.geocalculatorapp.SettingsActivity">

    <TextView
        android:id="@+id/distSpinnerLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="Distance Units"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="bold"
        android:typeface="normal" />

    <Spinner
        android:id="@+id/distSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/distSpinnerLabel"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/bearSpinnerLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Bearing Units"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="bold"
        android:typeface="normal" />

    <Spinner
        android:id="@+id/bearSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bearSpinnerLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

</LinearLayout>