<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="gvsu.vinsko.geocalculatorapp.SettingsActivity">

    <RelativeLayout
        android:id="@+id/leftHalf"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Spinner
            android:id="@+id/distSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distSpinnerLabel"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/distSpinnerLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Distance Units"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold"
            android:typeface="normal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightHalf"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Spinner
            android:id="@+id/bearSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bearSpinnerLabel"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/bearSpinnerLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Bearing Units"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="bold"
            android:typeface="normal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>